{
    "name": "healthyFood",
    "version": "1.0",
    "description": "Get suggestions for healthier recipes",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["content.js"],
            "run_at": "document_end",
            "all_frames": false
        },
        {
            "matches": ["https://*/*"
            ],
            "js": ["content.js"],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}